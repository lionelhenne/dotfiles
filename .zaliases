# ------------------------------------------------------------
# Aliases
# ------------------------------------------------------------
alias home="clear;cd"
alias flushcache="sudo killall -HUP mDNSResponder"
alias update="composer self-update && composer global outdated && brew update && brew outdated --formula && npm update -g && npm outdated -g"
alias upgrade="composer global update && brew upgrade --formula && npm update -g && brew cleanup"
alias list='
	GREEN="\033[1;32m"; RESET="\033[0m"; \
	echo "" && \
	echo -e "${GREEN}Composer global${RESET}" && \
	echo -e "${GREEN}---------------${RESET}" && \
	composer global show --direct | sort && \
	echo "" && \
	echo -e "${GREEN}Homebrew Leaves${RESET}" && \
	echo -e "${GREEN}---------------${RESET}" && \
	brew leaves | sort | pr -4 -t -w $COLUMNS && \
	echo "" && \
	echo -e "${GREEN}Homebrew Dependencies${RESET}" && \
	echo -e "${GREEN}---------------------${RESET}" && \
	comm -13 <(brew leaves | sort) <(brew list --formula | sort) | pr -4 -t -w $COLUMNS && \
	echo "" && \
	echo -e "${GREEN}Homebrew Casks${RESET}" && \
	echo -e "${GREEN}--------------${RESET}" && \
	brew list --cask | grep -v "^font-" | sort | pr -4 -t -w $COLUMNS && \
	echo "" && \
	echo -e "${GREEN}Homebrew Fonts${RESET}" && \
	echo -e "${GREEN}--------------${RESET}" && \
	brew list --cask | grep "^font-" | pr -4 -t -w $COLUMNS && \
	echo "" && \
	echo -e "${GREEN}npm global${RESET}" && \
	echo -e "${GREEN}----------${RESET}" && \
	npm list -g --depth=0 --parseable | sed "1d" | xargs -n1 basename | sort | pr -4 -t -w $COLUMNS
'

# ------------------------------------------------------------
# micro
# ------------------------------------------------------------
alias m="micro"

# ------------------------------------------------------------
# eza
# ------------------------------------------------------------
alias ..="cd .."
ezaargs="-algOB --hyperlink --group --color=always"
alias l="eza $ezaargs"
alias li="eza $ezaargs --icons=always"
alias lti="eza $ezaargs --recurse --tree --level=2 --ignore-glob='.zsh_sessions|node_modules|.git|.DS_Store' --icons=always"
alias lt="eza $ezaargs --recurse --tree --level=2 --ignore-glob='.zsh_sessions|node_modules|.git|.DS_Store'"
alias lta="eza $ezaargs --recurse --tree --level=2"

# ------------------------------------------------------------
# fd
# ------------------------------------------------------------
alias f="fd -Hia --exclude .git --exclude node_modules"

# ------------------------------------------------------------
# Laravel 
# ------------------------------------------------------------
alias pa="[[ -s ./artisan ]] && php artisan"
alias @laravel="laravel-tool"
alias @cockpit="cockpit-tool"
alias @backup="mbu"